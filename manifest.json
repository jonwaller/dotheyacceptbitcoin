{
  "name": "Do They Accept Bitcoin?",
  "version": "1.0.1",
  "description": "Shows when the site you're visiting accepts Bitcoin.",
  "background": { "scripts": ["background.js"] },
  "page_action" :
  {
    "default_icon" : "bitcoin19.png",
    "default_title" : "This website accepts Bitcoin!"
  },
  "permissions" : [
    "tabs",
    "http://pastebin.com/",
    "http://bitcoinmagazine.com/"
  ],
  "icons" : {
    "48" : "bitcoin48.png",
    "128" : "bitcoin128.png"
  },
  "manifest_version": 2
}
